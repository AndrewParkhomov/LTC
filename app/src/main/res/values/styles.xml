<resources>

    <style name="AppTheme.NoActionBar" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <!-- this for radio button in decline order -->
        <item name="radioButtonStyle">@style/MyCustomRadiobutton</item>
    </style>

    <style name="MyCustomRadiobutton" parent="Base.Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:button">@drawable/radiobutton_basic</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="TextInputWrapper" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="errorEnabled">false</item>
        <item name="errorTextAppearance">@style/ErrorTextAppearance</item>
        <item name="hintTextAppearance">@style/HintTextAppearanceEnable</item>
        <item name="boxStrokeColor">@color/accent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:textColorHint">@color/main_text_color</item>
    </style>

    <style name="TextInputEditText" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ems">3</item>
        <item name="android:inputType">numberDecimal|numberSigned</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/main_text_color</item>
    </style>

    <style name="SimpleText">
        <item name="android:textColor">@color/main_text_color</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ResultText">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginEnd">30dp</item>
        <item name="android:layout_marginStart">30dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/main_text_color</item>
    </style>

    <style name="AlertDialogCustom" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColor">@color/accent</item>
        <item name="android:textColorPrimary">@color/main_text_color</item>
    </style>

    <style name="HintTextAppearanceEnable" parent="TextAppearance.Design.Hint">
        <!-- Inactive and Active label color, pointing to a selector-->
        <item name="android:textColor">@color/accent</item>
    </style>

    <style name="HintTextAppearanceDisable" parent="TextAppearance.Design.Hint">
        <!-- Inactive and Active label color, pointing to a selector-->
        <item name="android:textColor">@color/gray_400</item>
    </style>

    <style name="ErrorTextAppearance" parent="TextAppearance.Design.Error">
        <!-- Error text color-->
        <item name="android:textColor">@color/color_error</item>
    </style>

</resources>
