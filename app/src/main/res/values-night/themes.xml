<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BaseTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="textInputStyle">@style/TextInputWrapper</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="BaseTheme">
        <item name="colorPrimary">@color/FF37474f</item>
        <item name="colorPrimaryDark">@color/FF102027</item>
        <item name="colorAccent">@color/FF62727b</item>
        <item name="android:windowBackground">@color/FF838383</item>
    </style>

    <style name="SimpleText">
        <item name="android:textColor">@color/FFFFFFFF</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextInputWrapper" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="android:layout_width">match_parent</item>
        <item name="errorEnabled">true</item>
        <item name="hintTextAppearance">@style/HintTextAppearance</item>
        <item name="boxStrokeColor">@color/input_wrapper_color</item>
        <item name="boxStrokeErrorColor">@color/FFC400</item>
        <item name="errorTextColor">@color/FFC400</item>
        <item name="errorIconTint">@color/FFC400</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHint">@color/edit_text_hint</item>
        <item name="hintTextColor">@color/edit_text_hint</item>
    </style>

    <style name="TextInputEditText" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ems">3</item>
        <item name="android:inputType">numberDecimal|numberSigned</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/FFFFFFFF</item>
    </style>

    <style name="RadioButtonStyle" parent="@style/Widget.MaterialComponents.CompoundButton.RadioButton">
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:button">@null</item>
        <item name="android:textSize">20sp</item>
        <item name="colorAccent">@color/FFC400</item>
        <item name="android:colorAccent">@color/FFC400</item>
    </style>

</resources>