<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true">

    <ImageButton
        android:id="@+id/turnBackImgB"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:background="@android:color/transparent"
        android:padding="@dimen/v16dp"
        android:src="@drawable/arrow_on_back_pressed"
        app:layout_constraintBottom_toTopOf="@+id/include_1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/v10dp"
        android:layout_marginStart="@dimen/v10dp"
        android:text="DUMMY"
        android:textColor="@color/black"
        android:textSize="@dimen/v16sp"
        app:layout_constraintBottom_toTopOf="@+id/include_1"
        app:layout_constraintLeft_toRightOf="@+id/turnBackImgB"
        app:layout_constraintTop_toTopOf="parent" />

    <include
        android:id="@+id/include_1"
        layout="@layout/divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/v44dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include_1">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/glossaryImageView"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginEnd="@dimen/v16dp"
                android:layout_marginLeft="@dimen/v16dp"
                android:layout_marginRight="@dimen/v16dp"
                android:layout_marginStart="@dimen/v16dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/ed_img"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/glossaryTitleTextView"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginEnd="@dimen/v16dp"
                android:layout_marginLeft="@dimen/v16dp"
                android:layout_marginRight="@dimen/v16dp"
                android:layout_marginStart="@dimen/v16dp"
                android:layout_marginTop="@dimen/v16dp"
                android:gravity="center"
                android:text="dummy 1"
                android:textAppearance="?android:attr/textAppearanceLarge"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/glossaryImageView" />

            <TextView
                android:id="@+id/glossaryDescriptionTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/v16dp"
                android:layout_marginLeft="@dimen/v16dp"
                android:layout_marginRight="@dimen/v16dp"
                android:layout_marginStart="@dimen/v16dp"
                android:layout_marginTop="@dimen/v16dp"
                android:gravity="center"
                android:text="dummy 2"
                android:textSize="@dimen/v18sp"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/glossaryTitleTextView" />
        </android.support.constraint.ConstraintLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>

