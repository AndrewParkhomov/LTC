<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_50"
    android:clickable="true">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/headerContainerConstr"
        android:layout_width="0dp"
        android:layout_height="@dimen/v60dp"
        android:background="@color/gray_100"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <ImageButton
            android:id="@+id/turnBackImgB"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:padding="@dimen/v16dp"
            android:background="@android:color/transparent"
            android:src="@drawable/arrow_back"
            app:layout_constraintBottom_toTopOf="@+id/include_1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/header"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/v10dp"
            android:layout_marginStart="@dimen/v10dp"
            android:layout_marginRight="@dimen/v16dp"
            android:layout_marginEnd="@dimen/v16dp"
            app:layout_constraintHorizontal_bias="0"
            android:text="@string/dummy"
            android:textColor="@color/black"
            android:textSize="@dimen/v16sp"
            fontPath="raleway_bold.ttf"
            android:ellipsize="end"
            android:maxLines="1"
            app:layout_constraintBottom_toTopOf="@+id/include_1"
            app:layout_constraintLeft_toRightOf="@+id/turnBackImgB"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingPrefix"
            app:layout_constraintRight_toRightOf="parent" />

        <include
            android:id="@+id/include_1"
            layout="@layout/divider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </android.support.constraint.ConstraintLayout>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/headerContainerConstr"
        app:layout_constraintBottom_toBottomOf="parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/glossaryImageView"
                android:layout_width="0dp"
                android:layout_height="@dimen/v150dp"
                android:src="@drawable/front_curve_img"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/v16dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/glossaryTitleTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/v20dp"
                android:gravity="center"
                android:text="@string/dummy"
                android:textAppearance="?android:attr/textAppearanceLarge"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/glossaryImageView" />

            <TextView
                android:id="@+id/glossaryDescriptionTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/v16dp"
                android:gravity="start"
                android:text="@string/dummy"
                android:textSize="@dimen/v18sp"
                android:paddingBottom="@dimen/v16dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/glossaryTitleTextView" />
        </android.support.constraint.ConstraintLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>

