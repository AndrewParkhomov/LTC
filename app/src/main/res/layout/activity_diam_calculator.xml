<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="parkhomov.andrew.lensthicknesscalculator.activities.DiamCalculatorActivity">

    <include
        layout="@layout/toolbar"/>

    <GridLayout
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:rowCount="5"
        android:columnCount="2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/diam_activ_ed"
            android:layout_marginRight="70dp"
            android:layout_marginEnd="70dp"
            android:paddingTop="10dp"
            android:minWidth="100dp"
            android:layout_row="0"
            android:layout_column="0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/diam_activ_dbl"
            android:layout_marginRight="70dp"
            android:layout_marginEnd="70dp"
            android:minWidth="100dp"
            android:paddingTop="10dp"
            android:layout_row="1"
            android:layout_column="0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/diam_activ_pd"
            android:layout_marginRight="70dp"
            android:layout_marginEnd="70dp"
            android:minWidth="100dp"
            android:paddingTop="10dp"
            android:layout_row="2"
            android:layout_column="0" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="start"
            android:inputType="date"
            android:ems="3"
            android:id="@+id/editTextED"
            android:layout_row="0"
            android:layout_column="1"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="start"
            android:inputType="date"
            android:ems="3"
            android:id="@+id/editTextDBL"
            android:layout_row="1"
            android:layout_column="1" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="start"
            android:inputType="numberDecimal"
            android:ems="3"
            android:id="@+id/editTextPD"
            android:layout_row="2"
            android:layout_column="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:textSize="18sp"
            android:gravity="left"
            android:layout_gravity="left"
            android:minWidth="100dp"
            android:minHeight="90dp"
            android:paddingTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:id="@+id/textViewDiamResult"
            android:layout_columnSpan="2"
            android:layout_row="3"
            android:layout_column="0" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/buttonCalc"
            android:gravity="center_vertical"
            android:onClick="onButtonClicked"
            android:layout_gravity="center"
            android:id="@+id/button"
            android:layout_columnSpan="2"
            android:layout_row="4"
            android:layout_column="0" />

    </GridLayout>

</LinearLayout>
