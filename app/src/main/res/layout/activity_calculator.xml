<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        layout="@layout/toolbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <GridLayout
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:rowCount="10"
            android:columnCount="3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/thkns_activ_material_index"
                android:minWidth="120dp"
                android:paddingTop="10dp"
                android:layout_row="0"
                android:layout_column="0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/thkns_activ_sphere_power"
                android:paddingTop="10dp"
                android:layout_row="1"
                android:layout_column="0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/thkns_activ_cylinder_power"
                android:paddingTop="10dp"
                android:id="@+id/textViewCylinderPower"
                android:layout_row="2"
                android:layout_column="0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/thkns_activ_axis"
                android:paddingTop="10dp"
                android:id="@+id/textViewAxis"
                android:layout_row="3"
                android:layout_column="0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/thkns_activ_base_curve"
                android:paddingTop="10dp"
                android:id="@+id/textViewBaseCurve"
                android:layout_row="4"
                android:layout_column="0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/thkns_activ_center_thickness"
                android:paddingTop="10dp"
                android:id="@+id/textViewCenterThickness"
                android:layout_row="5"
                android:layout_column="0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/thkns_activ_edge_thickness"
                android:paddingTop="10dp"
                android:layout_row="6"
                android:layout_column="0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/thkns_activ_lens_diameter"
                android:paddingTop="10dp"
                android:layout_row="7"
                android:layout_column="0" />

            <ImageButton
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@color/white"
                android:contentDescription="@string/one"
                android:layout_marginEnd="@dimen/query_padding_right"
                android:layout_marginRight="@dimen/query_padding_right"
                android:scaleType="fitCenter"
                android:layout_gravity="center_vertical"
                android:layout_row="0"
                android:layout_column="1"
                android:id="@+id/imageButtonLensIndex"
                android:onClick="onQueryMarkImageButtonClicked"
                android:src="@drawable/query"/>

            <ImageButton
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@color/white"
                android:contentDescription="@string/two"
                android:scaleType="fitCenter"
                android:layout_gravity="center_vertical"
                android:layout_row="1"
                android:layout_column="1"
                android:id="@+id/imageButtonSpherePower"
                android:onClick="onQueryMarkImageButtonClicked"
                android:src="@drawable/query"/>

            <ImageButton
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@color/white"
                android:contentDescription="@string/three"
                android:scaleType="fitCenter"
                android:layout_gravity="center_vertical"
                android:layout_row="2"
                android:layout_column="1"
                android:id="@+id/imageButtonCylinderPower"
                android:onClick="onQueryMarkImageButtonClicked"
                android:src="@drawable/query"/>

            <ImageButton
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@color/white"
                android:contentDescription="@string/four"
                android:scaleType="fitCenter"
                android:layout_gravity="center_vertical"
                android:layout_row="3"
                android:layout_column="1"
                android:id="@+id/imageButtonAxis"
                android:onClick="onQueryMarkImageButtonClicked"
                android:src="@drawable/query"/>

            <ImageButton
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@color/white"
                android:contentDescription="@string/five"
                android:scaleType="fitCenter"
                android:layout_gravity="center_vertical"
                android:layout_row="4"
                android:layout_column="1"
                android:id="@+id/imageButtonRealBaseCurve"
                android:onClick="onQueryMarkImageButtonClicked"
                android:src="@drawable/query"/>

            <ImageButton
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@color/white"
                android:contentDescription="@string/six"
                android:scaleType="fitCenter"
                android:layout_gravity="center_vertical"
                android:layout_row="5"
                android:layout_column="1"
                android:id="@+id/imageButtonCenterThickness"
                android:onClick="onQueryMarkImageButtonClicked"
                android:src="@drawable/query"/>

            <ImageButton
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@color/white"
                android:contentDescription="@string/seven"
                android:scaleType="fitCenter"
                android:layout_gravity="center_vertical"
                android:layout_row="6"
                android:layout_column="1"
                android:id="@+id/imageButtonEdgeThickness"
                android:onClick="onQueryMarkImageButtonClicked"
                android:src="@drawable/query"/>

            <ImageButton
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@color/white"
                android:contentDescription="@string/eight"
                android:scaleType="fitCenter"
                android:layout_gravity="center_vertical"
                android:layout_row="7"
                android:layout_column="1"
                android:id="@+id/imageButtonLensDiameter"
                android:onClick="onQueryMarkImageButtonClicked"
                android:src="@drawable/query"/>

            <Spinner
                android:paddingTop="5dp"
                android:layout_row="0"
                android:layout_column="2"
                android:entries="@array/index_of_refraction"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:id="@+id/spinner" />


            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="start"
                android:inputType="date"
                android:ems="3"
                android:id="@+id/editTextSpherePower"
                android:layout_row="1"
                android:layout_column="2"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="start"
                android:inputType="date"
                android:ems="3"
                android:id="@+id/editTextCylinderPower"
                android:layout_row="2"
                android:layout_column="2" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="start"
                android:inputType="numberDecimal"
                android:ems="3"
                android:id="@+id/editTextAxis"
                android:layout_row="3"
                android:layout_column="2" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="start"
                android:inputType="numberDecimal"
                android:ems="3"
                android:id="@+id/editTextBaseCurve"
                android:layout_row="4"
                android:layout_column="2" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="start"
                android:inputType="numberDecimal"
                android:ems="3"
                android:id="@+id/editTextCenterThickness"
                android:layout_row="5"
                android:layout_column="2" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="start"
                android:inputType="numberDecimal"
                android:ems="3"
                android:id="@+id/editTextEdgeThickness"
                android:layout_row="6"
                android:layout_column="2" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="start"
                android:inputType="numberDecimal"
                android:ems="3"
                android:id="@+id/editTextLensDiameter"
                android:layout_row="7"
                android:layout_column="2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:textSize="18sp"
                android:gravity="left"
                android:layout_gravity="left"
                android:minWidth="100dp"
                android:minHeight="90dp"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:id="@+id/textViewResult"
                android:layout_columnSpan="3"
                android:layout_row="8"
                android:layout_column="0" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:text="@string/buttonCalc"
                android:gravity="center"
                android:onClick="onButtonCalcClicked"
                android:layout_gravity="center"
                android:id="@+id/button"
                android:layout_columnSpan="3"
                android:layout_row="9"
                android:layout_column="0" />

        </GridLayout>
    </ScrollView>

</LinearLayout>