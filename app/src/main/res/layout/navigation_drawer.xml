<?xml version="1.0" encoding="utf-8"?>

<parkhomov.andrew.lensthicknesscalculator.customViews.ScrimInsetsFrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_activity_navigation_drawer_rootLayout"
    style="@style/ScrimInsetsLayout"
    tools:context=".activities.MainActivity"
    tools:layout_marginEnd="?actionBarSize"
    tools:layout_marginRight="?actionBarSize">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.percent.PercentFrameLayout
            android:id="@+id/navigation_drawer_head_background"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true">

            <FrameLayout
                app:layout_aspectRatio="178%"
                app:layout_widthPercent="100%">

                <ImageView
                    android:id="@+id/navigation_drawer_user_account_picture_cover"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/image_nav_drawer_head_picture"
                    tools:ignore="ContentDescription" />

            </FrameLayout>

        </android.support.percent.PercentFrameLayout>

        <!-- Drawer items -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/navigation_drawer_background"
            android:clipToPadding="false"
            android:paddingBottom="@dimen/nav_drawer_vertical_spacing_listing"
            android:paddingTop="@dimen/nav_drawer_vertical_spacing_listing">

            <LinearLayout
                android:id="@+id/navigation_drawer_linearLayout_entries_root_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <FrameLayout
                    android:id="@+id/navigation_drawer_items_list_linearLayout_thkns_calc"
                    style="@style/NavDrawerRowLayout.Main">

                    <ImageView
                        android:id="@+id/navigation_drawer_items_list_icon_thkns_calc"
                        style="@style/NavDrawerRowItemIcon"
                        android:src="@drawable/ic_lens_calc_24dp"
                        tools:ignore="ContentDescription"
                        tools:tint="@color/nav_drawer_icon"/>

                    <TextView
                        android:id="@+id/navigation_drawer_items_textView_thkns_calc"
                        style="@style/NavDrawerRowItemText"
                        android:text="@string/nav_drawer_item_thkns_calc" />

                </FrameLayout>

                <FrameLayout
                    android:id="@+id/navigation_drawer_items_list_linearLayout_diamCalc"
                    style="@style/NavDrawerRowLayout.Main">

                    <ImageView
                        android:id="@+id/navigation_drawer_items_list_icon_diam_calc"
                        style="@style/NavDrawerRowItemIcon"
                        android:src="@drawable/ic_diam_calc_24dp"
                        tools:ignore="ContentDescription"
                        tools:tint="@color/nav_drawer_icon"/>

                    <TextView
                        android:id="@+id/navigation_drawer_items_textView_diamCalc"
                        style="@style/NavDrawerRowItemText"
                        android:text="@string/nav_drawer_item_diam_calc"/>

                </FrameLayout>

                <FrameLayout
                    android:id="@+id/navigation_drawer_items_linearLayout_glossary"
                    style="@style/NavDrawerRowLayout.Secondary">

                    <ImageView
                        android:id="@+id/navigation_drawer_items_list_icon_glossary"
                        style="@style/NavDrawerRowItemIcon"
                        android:src="@drawable/ic_glossary_24dp"
                        tools:ignore="ContentDescription"
                        tools:tint="@color/nav_drawer_icon"/>

                    <TextView
                        android:id="@+id/navigation_drawer_items_textView_glossary"
                        style="@style/NavDrawerRowItemText"
                        android:text="@string/nav_drawer_item_glossary"/>

                </FrameLayout>

                <include
                    layout="@layout/navigation_drawer_divider"/>

                <FrameLayout
                    android:id="@+id/navigation_drawer_items_list_linearLayout_settings"
                    style="@style/NavDrawerRowLayout.Secondary">

                    <ImageView
                        android:id="@+id/navigation_drawer_items_list_icon_settings"
                        style="@style/NavDrawerRowItemIcon"
                        android:src="@drawable/ic_settings_24dp"
                        android:tint="@color/text_black_secondary_icon_54"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:id="@+id/navigation_drawer_items_textView_settings"
                        style="@style/NavDrawerRowItemText"
                        android:text="@string/nav_drawer_settings" />

                </FrameLayout>

                <FrameLayout
                    android:id="@+id/navigation_drawer_items_list_linearLayout_about"
                    style="@style/NavDrawerRowLayout.Secondary">

                    <ImageView
                        android:id="@+id/navigation_drawer_items_list_icon_about"
                        style="@style/NavDrawerRowItemIcon"
                        android:src="@drawable/ic_info_24dp"
                        android:tint="@color/text_black_secondary_icon_54"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:id="@+id/navigation_drawer_items_textView_about"
                        style="@style/NavDrawerRowItemText"
                        android:text="@string/nav_drawer_about" />

                </FrameLayout>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</parkhomov.andrew.lensthicknesscalculator.customViews.ScrimInsetsFrameLayout>