<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/calculationContainerConstr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusableInTouchMode="true">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/v16dp"
            android:layout_marginStart="@dimen/v16dp"
            android:alpha="0.87"
            android:minWidth="@dimen/v120dp"
            android:text="@string/tab_thkns_material_index"
            android:textColor="@color/black"
            android:textSize="@dimen/v16sp"
            app:layout_constraintBottom_toTopOf="@+id/include_1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Spinner
            android:id="@+id/new_spinner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/v16dp"
            android:layout_marginRight="@dimen/v16dp"
            android:alpha="0.87"
            android:background="@android:color/transparent"
            android:entries="@array/index_of_refraction"
            android:textColor="@color/black"
            app:layout_constraintBottom_toTopOf="@+id/include_1"
            app:layout_constraintStart_toEndOf="@+id/textView"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/indexImgB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:alpha="0.87"
            android:background="@android:color/transparent"
            android:padding="@dimen/v16dp"
            app:srcCompat="@drawable/query"
            app:layout_constraintBottom_toTopOf="@+id/include_1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <include
            android:id="@+id/include_1"
            layout="@layout/divider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/v60dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/sphereTxtInptL"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/v16dp"
            android:layout_marginLeft="@dimen/v16dp"
            android:layout_marginStart="@dimen/v16dp"
            android:alpha="0.87"
            android:textColorHint="@color/black"
            app:hintTextAppearance="@style/TextLabelColor"
            app:layout_constraintBottom_toTopOf="@+id/include_2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/sphereImgB"
            app:layout_constraintTop_toTopOf="@+id/include_1">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/sphereET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alpha="0.87"
                android:background="@android:color/transparent"
                android:ems="3"
                android:hint="@string/tab_thkns_sphere_power"
                android:inputType="date"
                android:maxLines="1"
                android:paddingTop="@dimen/v5dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textCursorDrawable="@drawable/cursor_color"
                android:textSize="@dimen/v16sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <ImageButton
            android:id="@+id/sphereImgB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.87"
            android:background="@android:color/transparent"
            android:padding="@dimen/v16dp"
            app:srcCompat="@drawable/query"
            app:layout_constraintBottom_toTopOf="@+id/include_2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/include_1" />

        <include
            android:id="@+id/include_2"
            layout="@layout/divider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/v60dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/include_1" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/cylinderTxtInptL"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/v16dp"
            android:layout_marginLeft="@dimen/v16dp"
            android:layout_marginStart="@dimen/v16dp"
            android:alpha="0.87"
            android:textColorHint="@color/black"
            app:hintTextAppearance="@style/TextLabelColor"
            app:layout_constraintBottom_toTopOf="@+id/include_3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/sphereImgB"
            app:layout_constraintTop_toTopOf="@+id/include_2">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/cylinderET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alpha="0.87"
                android:background="@android:color/transparent"
                android:ems="3"
                android:hint="@string/tab_thkns_cylinder_power"
                android:inputType="date"
                android:maxLines="1"
                android:paddingTop="@dimen/v5dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textCursorDrawable="@drawable/cursor_color"
                android:textSize="@dimen/v16sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <ImageButton
            android:id="@+id/cylinderImgB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.87"
            android:background="@android:color/transparent"
            android:padding="@dimen/v16dp"
            app:srcCompat="@drawable/query"
            app:layout_constraintBottom_toTopOf="@+id/include_3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/include_2" />

        <include
            android:id="@+id/include_3"
            layout="@layout/divider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/v60dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/include_2" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/axisTxtInptL"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/v16dp"
            android:layout_marginLeft="@dimen/v16dp"
            android:layout_marginStart="@dimen/v16dp"
            android:alpha="0.87"
            android:textColorHint="@color/black"
            app:hintTextAppearance="@style/TextLabelColor"
            app:layout_constraintBottom_toTopOf="@+id/include_3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/sphereImgB"
            app:layout_constraintTop_toTopOf="@+id/include_4">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/axisET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alpha="0.87"
                android:background="@android:color/transparent"
                android:digits="0123456789."
                android:ems="3"
                android:hint="@string/tab_thkns_axis"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:maxLines="1"
                android:paddingTop="@dimen/v5dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textCursorDrawable="@drawable/cursor_color"
                android:textSize="@dimen/v16sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <ImageButton
            android:id="@+id/axisImgB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.87"
            android:background="@android:color/transparent"
            android:padding="@dimen/v16dp"
            app:srcCompat="@drawable/query"
            app:layout_constraintBottom_toTopOf="@+id/include_4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/include_3" />

        <include
            android:id="@+id/include_4"
            layout="@layout/divider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/v60dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/include_3" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/curveTxtInptL"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/v16dp"
            android:layout_marginLeft="@dimen/v16dp"
            android:layout_marginStart="@dimen/v16dp"
            android:alpha="0.87"
            android:textColorHint="@color/black"
            app:hintTextAppearance="@style/TextLabelColor"
            app:layout_constraintBottom_toTopOf="@+id/include_5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/sphereImgB"
            app:layout_constraintTop_toTopOf="@+id/include_4">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/curveET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alpha="0.87"
                android:background="@android:color/transparent"
                android:digits="0123456789."
                android:ems="3"
                android:hint="@string/tab_thkns_base_curve"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:maxLines="1"
                android:paddingTop="@dimen/v5dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textCursorDrawable="@drawable/cursor_color"
                android:textSize="@dimen/v16sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <ImageButton
            android:id="@+id/curveImgB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.87"
            android:background="@android:color/transparent"
            android:padding="@dimen/v16dp"
            app:srcCompat="@drawable/query"
            app:layout_constraintBottom_toTopOf="@+id/include_5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/include_4" />

        <include
            android:id="@+id/include_5"
            layout="@layout/divider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/v60dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/include_4" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/thicknessTxtInptL"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/v16dp"
            android:layout_marginLeft="@dimen/v16dp"
            android:layout_marginStart="@dimen/v16dp"
            android:alpha="0.87"
            android:textColorHint="@color/black"
            app:hintTextAppearance="@style/TextLabelColor"
            app:layout_constraintBottom_toTopOf="@+id/include_6"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/sphereImgB"
            app:layout_constraintTop_toTopOf="@+id/include_5">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/centerThicknessET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alpha="0.87"
                android:background="@android:color/transparent"
                android:digits="0123456789."
                android:ems="3"
                android:hint="@string/tab_thkns_center_thickness"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:maxLines="1"
                android:paddingTop="@dimen/v5dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textCursorDrawable="@drawable/cursor_color"
                android:textSize="@dimen/v16sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <ImageButton
            android:id="@+id/thicknessImgB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.87"
            android:background="@android:color/transparent"
            android:padding="@dimen/v16dp"
            app:srcCompat="@drawable/query"
            app:layout_constraintBottom_toTopOf="@+id/include_6"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/include_5" />

        <include
            android:id="@+id/include_6"
            layout="@layout/divider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/v60dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/include_5" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/edgeTxtInptL"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/v16dp"
            android:layout_marginLeft="@dimen/v16dp"
            android:layout_marginStart="@dimen/v16dp"
            android:alpha="0.87"
            android:textColorHint="@color/black"
            app:hintTextAppearance="@style/TextLabelColor"
            app:layout_constraintBottom_toTopOf="@+id/include_7"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/sphereImgB"
            app:layout_constraintTop_toTopOf="@+id/include_6">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edgeThicknessET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alpha="0.87"
                android:background="@android:color/transparent"
                android:ems="3"
                android:hint="@string/tab_thkns_edge_thickness"
                android:imeOptions="actionNext"
                android:inputType="date"
                android:maxLines="1"
                android:paddingTop="@dimen/v5dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textCursorDrawable="@drawable/cursor_color"
                android:textSize="@dimen/v16sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <ImageButton
            android:id="@+id/edgeImgB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.87"
            android:background="@android:color/transparent"
            android:padding="@dimen/v16dp"
            app:srcCompat="@drawable/query"
            app:layout_constraintBottom_toTopOf="@+id/include_7"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/include_6" />

        <include
            android:id="@+id/include_7"
            layout="@layout/divider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/v60dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/include_6" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/diameterTxtInptL"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/v16dp"
            android:layout_marginLeft="@dimen/v16dp"
            android:layout_marginStart="@dimen/v16dp"
            android:alpha="0.87"
            android:textColorHint="@color/black"
            app:hintTextAppearance="@style/TextLabelColor"
            app:layout_constraintBottom_toTopOf="@+id/include_8"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/sphereImgB"
            app:layout_constraintTop_toTopOf="@+id/include_7">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/diameterET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alpha="0.87"
                android:background="@android:color/transparent"
                android:digits="0123456789."
                android:ems="3"
                android:hint="@string/tab_thkns_lens_diameter"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:maxLines="1"
                android:paddingTop="@dimen/v5dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textCursorDrawable="@drawable/cursor_color"
                android:textSize="@dimen/v16sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <ImageButton
            android:id="@+id/diameterImgB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.87"
            android:background="@android:color/transparent"
            android:padding="@dimen/v16dp"
            app:srcCompat="@drawable/query"
            app:layout_constraintBottom_toTopOf="@+id/include_8"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/include_7" />

        <include
            android:id="@+id/include_8"
            layout="@layout/divider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/v60dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/include_7" />

        <Button
            android:id="@+id/thicknessCalculateButton"
            style="?android:attr/borderlessButtonStyle"
            fontPath="raleway_bold.ttf"
            android:layout_width="@dimen/v288dp"
            android:layout_height="@dimen/v54dp"
            android:layout_marginBottom="@dimen/v16dp"
            android:layout_marginTop="@dimen/v20dp"
            android:background="@drawable/round_button"
            android:text="@string/button_text_calculate"
            android:textAllCaps="false"
            android:textColor="@color/gray_300"
            android:textSize="@dimen/v20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/include_8"
            app:layout_constraintVertical_bias="1"
            tools:ignore="MissingPrefix" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>