<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/turnBackImgB"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:background="@android:color/transparent"
        android:padding="@dimen/v16dp"
        android:src="@drawable/arrow_on_back_pressed"
        app:layout_constraintBottom_toTopOf="@+id/include_1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/v10dp"
        android:layout_marginStart="@dimen/v10dp"
        android:text="DUMMY"
        android:textColor="@color/black"
        android:textSize="@dimen/v16sp"
        app:layout_constraintBottom_toTopOf="@+id/include_1"
        app:layout_constraintLeft_toRightOf="@+id/turnBackImgB"
        app:layout_constraintTop_toTopOf="parent" />

    <include
        android:id="@+id/include_1"
        layout="@layout/divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/v44dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/settingsRcycV"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include_1">

    </android.support.v7.widget.RecyclerView>

</android.support.constraint.ConstraintLayout>