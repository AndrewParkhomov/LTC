<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:focusable="true"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/headerContainerConstr"
        android:layout_width="0dp"
        android:layout_height="@dimen/v60dp"
        android:background="@color/gray_100"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <ImageButton
            android:id="@+id/turnBackImgB"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:padding="@dimen/v16dp"
            android:background="@android:color/transparent"
            android:src="@drawable/arrow_back"
            app:layout_constraintBottom_toTopOf="@+id/include_1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/v10dp"
            android:layout_marginStart="@dimen/v10dp"
            android:text="@string/header_settings"
            android:textColor="@color/black"
            android:textSize="@dimen/v16sp"
            fontPath="raleway_bold.ttf"
            app:layout_constraintBottom_toTopOf="@+id/include_1"
            app:layout_constraintLeft_toRightOf="@+id/turnBackImgB"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingPrefix" />

        <include
            android:id="@+id/include_1"
            layout="@layout/divider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </android.support.constraint.ConstraintLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/settingsRcycV"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/headerContainerConstr">

    </android.support.v7.widget.RecyclerView>

</android.support.constraint.ConstraintLayout>